<h2 class="title is-2">All Product Categories</h2>
<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Category</th>
      <th>Products</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category|%>
      <tr>
      <td><%= category.name %> <em>(<%= category.products.count %>)</em></td>
      <td><%= link_to "Show Products", category, class: "button is-success"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>
  <strong>
    <%= link_to 'âœ” Click to See all Product Categories', categories_path %>
  </strong>
</p>
