<br>
<header>
  <nav class="level">
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "Home", root_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "Products", products_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "Creators", product_creators_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "Categories", categories_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <div>
        <p class="subtitle is-5">
          <%= link_to "Countries", countries_path%>
        </p>
      </div>
    </div>
    <div class="level-item has-text-centered">
      <%= form_with(url: search_products_path, method: :get, local: true) do%>
        <div class="field has-addons">
          <p class="control">
            <%= text_field_tag(:keywords, nil, class: "input", placeholder: 'Search For Products')%>
          </p>
          <br>
          <br>
          <p class="ml-2 control">
            <button class="button is-success">
              Search
            </button>
          </p>
        </div>
      <% end%>
    </div>
  </nav>
</header>