<h1>Home#index</h1>

<div class="columns">
  <div class="column">
    <h2 class="title is-2">All Products </h2>
    <ol class="ml-5">
      <% @products.each do |product|%>
        <li> <%= link_to product.product_name, product %><em>(<%= link_to product.product_creator.name %>)</em></li>
      <% end %>
    </ol>
  </div>

  <div class="column">
    <h2 class="title is-2">All Product Creators </h2>
    <ol class="ml-5">
      <% @product_creators.each do |creator|%>
        <li> <%= link_to creator.name, creator %></li>
      <% end %>
    </ol>
  </div>
</div>
